# Set database environment variables
export APP_DATABASE_HOST="$MYSQL_HOST"
export APP_DATABASE_PORT="$MYSQL_PORT"
export APP_DATABASE_NAME="$MYSQL_PATH"
export DB_DATABASE="$DB_PATH"
export APP_DATABASE_USER="$MYSQL_USERNAME"
export APP_DATABASE_PASSWORD="$MYSQL_PASSWORD"
export DB_SCHEME="$MYSQL_SCHEME"
export DATABASE_URL="${DB_SCHEME}://${DB_USERNAME}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_PATH}"